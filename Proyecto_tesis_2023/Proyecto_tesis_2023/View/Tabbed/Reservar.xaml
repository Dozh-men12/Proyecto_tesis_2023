<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_tesis_2023.View.Tabbed.Reservar"
             NavigationPage.HasNavigationBar="False">
    <ScrollView>
        <StackLayout BackgroundColor="Transparent">
            <Grid ColumnDefinitions="*,*"
                VerticalOptions="Start"
                BackgroundColor="#2887DE"
                HeightRequest="30"
                Padding="8"
                RowDefinitions="*">
                <Label 
                    Margin="5,2,0,0"
                    Grid.Column="0"
                    Text="Reservar"
                    FontSize="Medium"
                    TextColor="White">
                </Label>
                <ImageButton
            Grid.Column="1"
            Source="ic_dots"
            Background="transparent"
            HorizontalOptions="End">
                </ImageButton>
            </Grid>

            <StackLayout VerticalOptions="Start">
                <Image  Source="camp.png"  HeightRequest="300" WidthRequest="300"  Rotation="90" Margin="-50" />
                <Label Text="Seleccione el campo" FontAttributes="Bold"
                   FontSize="17"
                   TextColor="Black"
                   Margin="10,10,0,10"/>
                <Picker  Title="Eligir un campo a reservar" Margin="20,-10,20,0">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Futbol campo1</x:String>
                            <x:String>Futbol campo 2</x:String>
                            <x:String>Basquet y/o Voley</x:String>
                            <x:String>Frontón</x:String>
                            <x:String>Ping Pong</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </StackLayout>
            <StackLayout VerticalOptions="Center"  HorizontalOptions="FillAndExpand">
                <Label FontAttributes="Bold" Text="Seleccione la fecha"
                   FontSize="17"
                   Margin="10,10,0,10"
                   TextColor="Black" />
