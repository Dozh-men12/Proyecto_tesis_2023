<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_tesis_2023.View.Tabbed.ContainerTabbedPage"
             xmlns:views="clr-namespace:Proyecto_tesis_2023.View.Tabbed"
             NavigationPage.HasNavigationBar="False"
             BarBackgroundColor="Orange"
            >
    
    <TabbedPage.Children>

        <NavigationPage Title="Reservar" IconImageSource="icon_calendar">
            <x:Arguments>
                <views:Reservar/>
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Mis Reservas" IconImageSource="icon_my_reserve">
            <x:Arguments>
                <views:Mis_reservas/>
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Reglamentos" IconImageSource="icon_map">
            <x:Arguments>
                <views:Reglamentos/>
            </x:Arguments>
        </NavigationPage>

    </TabbedPage.Children>
</TabbedPage>